<h2 class="text-center m-5">Sign up</h2>

<div class="col-8 offset-2 col-sm-4 offset-sm-4">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.input :email, class: 'form-control m-2' %>
      <%= f.input :password, class: 'form-control m-2' %>
      <%= f.input :password_confirmation, class: 'form-control m-2'%>
      <br />
      <%= f.button :submit, class: "btn-primary" %>
      <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
  <% end %>
  <%= render "users/shared/links" %>
</div>

