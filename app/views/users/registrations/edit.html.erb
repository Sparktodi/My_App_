<h2 class="text-center m-5" >Edit user <%= current_user.email %></h2>

<div class="col-8 offset-2 col-sm-4 offset-sm-4">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  <%= render "users/shared/error_messages", resource: resource %>

  <%= f.input :email, autofocus: true, autocomplete: "email" %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <%= f.input :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>

    <%= f.input :password_confirmation, autocomplete: "new-password" %>


    <%= f.input :current_password, autocomplete: "current-password" %>
    <i>(we need your current password to confirm your changes)</i>
    <br />
    <br />

    <%= f.button :submit, "Update", class: "btn-primary" %>
<% end %>

  <p><%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>
</div>